                        </li>
                        <li>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <p class="large text-muted">@Html.Sitecore().Field("End Description", Model.Item)</p>
            </div>
        </div>
    </div>
</section>
}
