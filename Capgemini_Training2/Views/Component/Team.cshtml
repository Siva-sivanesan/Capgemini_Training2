                        </li>
                        <li>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="team-member">
                    <div class="image3">@Html.Sitecore().Field("Photo3", Model.Item)</div>
                    <h4>@Html.Sitecore().Field("Name3", Model.Item)</h4>
                    <p class="text-muted">@Html.Sitecore().Field("Role3", Model.Item)</p>
                    <ul class="list-inline social-buttons">
                        <li>
                            <a href="#"><i class="fa fa-twitter"></i></a>
