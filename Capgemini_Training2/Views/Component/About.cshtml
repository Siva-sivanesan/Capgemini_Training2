@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel

@if (Model != null && Model.Item != null)
{
    <!-- about -->
    <div class="about">
        <div class="container-fluid">
            <div class="row d_flex">
                <div class="col-md-7">
                    <div class="titlepage">
                        <h2>
                            @Html.Sitecore().Field("About text", Model.Item)
                        </h2>
                        <span>
                            @Html.Sitecore().Field("About Description", Model.Item)
                        </span>
                        <a class="read_more" href="Javascript:void(0)"> Read More</a>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="about_img">
                        <figure>@Html.Sitecore().Field("About image", Model.Item)</figure>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- end about -->
